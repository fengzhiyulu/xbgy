<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xbgy.system.dao.PrivilegeDao">
    <cache readOnly="true"/>
    
	<resultMap id="BaseResultMap" type="com.xbgy.system.model.Privilege">
		<id column="pri_Id" property="priId" jdbcType="INTEGER" />
		<result column="pri_Name" property="priName" jdbcType="VARCHAR" />
		<collection property="roleSet" ofType="Role" resultMap="com.xbgy.system.dao.roleDao.BaseResultMap">
		</collection>
	</resultMap>

	
	<select id="getRolesByPrivilege" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select
			p.pri_id,p.pri_Name,
			r.role_id,r.role_Name,r.role_Desc
		from privilege p,privilege_role pr,role r
		where p.pri_Id = pr.pri_Id and r.role_Id = pr.role_id
		and p.pri_Id = #{url,jdbcType=INTEGER}
	</select>
	
</mapper>
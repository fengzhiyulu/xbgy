<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xbgy.system.dao.UrlMapper">
    <cache readOnly="true"/>
    
	<resultMap id="BaseResultMap" type="com.xbgy.system.model.Url">
		<id column="urlId" property="urlId" jdbcType="INTEGER" />
		<result column="urlName" property="urlName" jdbcType="VARCHAR" />
		<association property="privilege" javaType="com.ssmm.model.Privilege">
			<id column="priId" property="priId" jdbcType="INTEGER" />
			<result column="priName" property="priName" jdbcType="VARCHAR" />
			<collection property="roleSet" ofType="com.ssmm.model.Role">
				<id column="roleId" property="roleId" jdbcType="INTEGER" />
			    <result column="roleName" property="roleName" jdbcType="VARCHAR" />
			    <result column="roleDesc" property="roleDesc" jdbcType="VARCHAR" />
			</collection>
		</association>
	</resultMap>

	<sql id="Base_Column_List">
		id, username, password, age
	</sql>
	<select id="getRoleByUrl" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
			u.urlId,u.urlName,
			p.priId,p.priName,
			r.roleId,r.roleName,r.roleDesc
		from url u,privilege p,privilege_role pr,role r
		where p.priId = pr.pId and r.roleId = pr.rid and u.priId = p.priId 
		and u.urlName = #{url,jdbcType=VARCHAR}
	</select>
</mapper>